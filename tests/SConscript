Import('env')

BIN_NAME = 'needle_tests'

INCLUDES = [
    '#deps/',
    '#include/'
]

LIBRARIES = [
    'c++',
    'c++abi',
    'needle'
]

LIBRARY_PATHS = [
    '/usr/lib',
    '#/bin/src/'
]

test_env = env.Clone()
test_env.Append(CPPPATH=INCLUDES)


# Build binary / library

test_env.Program(BIN_NAME, source=Glob('*.c'), 
                 LIBS=LIBRARIES, LIBPATH=LIBRARY_PATHS)

